# =====================================================
# KhidmaApp.com - Environment Configuration
# =====================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =====================================================
# APPLICATION SETTINGS
# =====================================================
APP_ENV=development
APP_DEBUG=true
APP_NAME=KhidmaApp.com

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=khidmaapp
DB_USER=root
DB_PASS=

# =====================================================
# URL SETTINGS
# =====================================================
BASE_URL=http://localhost:8000
SITE_URL=http://localhost:8000

# =====================================================
# SESSION & SECURITY
# =====================================================
SESSION_LIFETIME=120
CSRF_TOKEN_EXPIRE=3600

# =====================================================
# SITE INFORMATION
# =====================================================
SITE_TITLE_AR=خدمة | منصة طلب الخدمات
SITE_TITLE_EN=KhidmaApp | Service Request Platform
CONTACT_PHONE=+966501234567
CONTACT_EMAIL=info@khidmaapp.com

# =====================================================
# ADMIN SETTINGS
# =====================================================
ADMIN_EMAIL=admin@khidmaapp.com

# =====================================================
# WHATSAPP INTEGRATION
# =====================================================
WHATSAPP_CHANNEL_URL=https://whatsapp.com/channel/0029VbCCqZoI1rcjIn9IWV2l
WHATSAPP_BUSINESS_NUMBER=+966501234567

# =====================================================
# STRIPE PAYMENT GATEWAY
# =====================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_LEAD_PRICE=1000

# =====================================================
# EMAIL CONFIGURATION (SMTP)
# =====================================================
# Supported providers: Gmail, SendGrid, Mailgun, Amazon SES, etc.

# SMTP Server Settings
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls

# Sender Information
MAIL_FROM_ADDRESS=noreply@khidmaapp.com
MAIL_FROM_NAME=KhidmaApp

# Debug Mode (set to true to see SMTP debug output)
MAIL_DEBUG=false

# =====================================================
# GMAIL SETUP INSTRUCTIONS
# =====================================================
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to: https://myaccount.google.com/apppasswords
# 3. Create a new App Password for "Mail"
# 4. Use that password in MAIL_PASSWORD (not your regular password!)
#
# Example Gmail settings:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=xxxx xxxx xxxx xxxx (App Password)
# MAIL_ENCRYPTION=tls

# =====================================================
# SENDGRID SETUP (Alternative)
# =====================================================
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your_sendgrid_api_key
# MAIL_ENCRYPTION=tls

# =====================================================
# CACHE CONFIGURATION
# =====================================================
# Set to 'false' to disable caching (useful for development)
CACHE_ENABLED=true

# =====================================================
# RATE LIMITING
# =====================================================
# Rate limiting is always enabled for security
# These are the default limits (can be changed in RateLimiter.php):
# - Login: 5 attempts per 15 minutes
# - API: 100 requests per minute
# - Forms: 10 submissions per minute
# - Registration: 3 attempts per hour

