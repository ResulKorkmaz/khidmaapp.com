{
  "extends": "@onlineusta/typescript-config/base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "esnext",
    "target": "ES2020",
    "noEmit": false,
    "incremental": false,
    "tsBuildInfoFile": null
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "prisma/migrations", "**/*.test.ts"]
}
